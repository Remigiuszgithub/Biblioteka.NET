<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/lumen/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Biblioteka.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="StronaGlowna" asp-action="Index">Biblioteka</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" asp-authorize-policy="RequireLogin">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Ksiazki" asp-action="Index">Książki</a>
                        </li>
                        <li class="nav-item" asp-authorize-policy="RequireLogin">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Czytelnicy" asp-action="Index">Czytelnicy</a>
                        </li>
                        <li class="nav-item" asp-authorize-policy="RequireLogin">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Kategorie" asp-action="Index">Kategorie</a>
                        </li>
                        <li class="nav-item" asp-authorize-policy="RequireLogin">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Wypozyczenia" asp-action="Index">Aktualnie wypożyczenia</a>
                        </li>
                        <li class="nav-item" asp-authorize-policy="RequireLogin">
                            <a class="nav-link text-dark" asp-controller="Konto" asp-action="Uzytkownicy">Użytkownicy aplikacji</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item" asp-authorize-policy="RequireLogin">
                            <a class="nav-link text-dark" asp-controller="Konto" asp-action="Wyloguj">Wyloguj</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Polityka prywatności</a>
            </div>
            <div>
                Copyright&copy 2024 by <a href="https://remigiusznowakowski.pl" target="_blank">Remigiusz Nowakowski</a> | All Rights Reserved.
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
