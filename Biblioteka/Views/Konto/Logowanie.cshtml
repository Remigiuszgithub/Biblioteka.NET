@{
    ViewData["Title"] = "Logowanie";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Logowanie" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="username" class="control-label">Nazwa użytkownika:</label>
            <input type="text" id="username" name="username" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="haslo" class="control-label">Hasło:</label>
            <input type="password" id="haslo" name="haslo" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Zaloguj</button>

        @if (ViewBag.Blad != null)
        {
                <p style="color:red;">@ViewBag.Blad</p>
        }
    </form>
</div>
